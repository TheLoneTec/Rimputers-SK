			<WorkToBuild>5500</WorkToBuild>
			<Mass>500</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<size>(3,2)</size>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>300</costStuffCount>
